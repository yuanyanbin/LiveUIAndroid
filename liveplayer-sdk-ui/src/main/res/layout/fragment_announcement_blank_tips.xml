<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:drawableLeft="@drawable/iv_lp_ui_notice"
        android:text="@string/live_announcement"
        android:textSize="14sp"
        android:drawablePadding="7dp"
        android:textColor="@color/color_7F7F88"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/iv_announcement_not_image"
        android:src="@drawable/iv_lp_ui_not_notice"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <TextView
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_00000000"
        android:textSize="12sp"
        android:layout_below="@+id/iv_announcement_not_image"
        android:text="@string/string_notice_edit_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>