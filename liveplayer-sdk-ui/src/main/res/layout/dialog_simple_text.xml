<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:textColor="@color/live_white"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:paddingLeft="3dp"
        android:background="@color/color_686F81"
        android:text="@string/live_sweet_hint"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    
    <LinearLayout
        android:layout_below="@+id/tv_dialog_title"
        android:background="@color/live_white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/tv_dialog_info"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textColor="@color/color_00000000"
            android:layout_weight="1"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_dialog_ok"
            android:text="@string/live_quiz_dialog_confirm"
            android:textColor="@color/live_white"
            android:layout_marginBottom="10dp"
            android:background="@color/live_blue"
            android:layout_gravity="center_horizontal"
            android:layout_width="120dp"
            android:layout_height="30dp" />

    </LinearLayout>

</RelativeLayout>