<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/fragment_left_menu_clear_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_live_room_margin"
        android:src="@drawable/live_ic_clear"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/fragment_left_menu_send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_live_room_margin"
        android:src="@drawable/live_ic_send_msg" />

    <ImageView
        android:id="@+id/fragment_left_menu_question_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_live_room_margin"
        android:visibility="gone"
        android:src="@drawable/live_ic_question_answer_no"
        />

    <ImageView
        android:id="@+id/fragment_left_menu_remarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_live_room_margin"
        android:visibility="gone"
        android:src="@drawable/iv_ui_remarks_show"
        />


    <TextView
        android:id="@+id/fragment_left_menu_stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="流信息"
        android:textColor="#039479"
        android:textSize="17sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fragment_left_menu_huiyin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="回音配置"
        android:textColor="#15bae4"
        android:textSize="17sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fragment_left_menu_copy_2_SD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="拷贝日志到SD卡"
        android:textColor="#15bae4"
        android:textSize="17sp"
        android:visibility="gone" />
</LinearLayout>