<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:paddingRight="4dp"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/iv_item_online_partent_state"
        android:src="@drawable/iv_lp_ui_group_close"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/tv_item_online_partent_title"
        android:textSize="16sp"
        android:text="分组1"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="3dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <com.baijiayun.live.ui.viewsupport.CircleTextView
        android:id="@+id/ctv_item_online_partent"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="3dp"
        android:textSize="11sp"
        android:gravity="center"
        android:textColor="@color/live_white"
        android:layout_width="15dp"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/tv_item_online_partent_number"
        android:textSize="16sp"
        android:text="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>