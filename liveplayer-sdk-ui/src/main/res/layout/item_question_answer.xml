<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/live_white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >
        <TextView
            android:id="@+id/fragment_question_answer_symbol"
            android:textSize="10sp"
            android:text="问"
            android:padding="2dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/live_red_question_symbol"
            android:background="@drawable/ic_item_question_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_question_answer_name"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="xx"
            android:textSize="14sp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/fragment_question_answer_time"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="11:12"
            android:layout_height="wrap_content"
            android:textColor="@color/live_text_color_light"
            android:textSize="12sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/fragment_question_answer_content"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="hello world 测试"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/fragment_question_answer_reply"
        android:visibility="gone"
        android:background="@color/live_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="6dp"
        >
    </LinearLayout>
</LinearLayout>