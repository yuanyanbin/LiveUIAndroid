<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_jingxi_red_packet_top"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="32dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="31dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_jingxi_rp_icon"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_width="22dp"
                android:layout_height="22dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_jingxi_rp_top_name"
            android:gravity="center"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/color_00000000"
            android:singleLine="true"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />


        <TextView
            android:id="@+id/tv_jingxi_rp_top_coin"
            android:gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_00000000"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="#F1EEE4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>