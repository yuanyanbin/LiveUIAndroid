<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_question_tool_container"
    android:layout_width="224dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_question"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dialog_base_title_container"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/bg_dialog_question_title"
        android:paddingLeft="12dp">

        <TextView
            android:id="@+id/dialog_base_title"
            style="@style/LiveTextTitle"
            android:layout_centerVertical="true"
            android:text="答题器"
            android:textColor="@color/live_white" />

        <LinearLayout
            android:id="@+id/dialog_close"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:src="@drawable/ic_fork" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dialog_question_tool_countDown_layout"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="12dp"
        android:background="#FAFAFA"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/live_room_question_tool_countDown"
            android:textColor="@color/live_grey_question_tool" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/dialog_question_tool_countDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/live_grey_question_tool" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_question_tool_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/dialog_question_tool_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:textColor="@color/live_grey_question_tool"
        android:textSize="12sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/dialog_btn_submit"
        android:layout_width="62dp"
        android:layout_height="28dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="20dp"
        android:background="@color/live_blue"
        android:text="@string/live_room_question_tool_submit"
        android:textColor="@color/live_white"
        android:textSize="12sp" />
</LinearLayout>